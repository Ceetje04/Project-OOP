<Window x:Class="Cédric_Vindevogel___Project_OOP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cédric_Vindevogel___Project_OOP"
        mc:Ignorable="d"
        Title="Project OOP" SizeToContent="Height" Width="500" FontSize="18">
    <StackPanel Margin="10">
        <GroupBox Header="COM-port">
            <ComboBox Name="cbxComPorts" Margin="10" SelectionChanged="cbxComPorts_SelectionChanged"></ComboBox>
        </GroupBox>
        <GroupBox Header="Verzend data">
            
        </GroupBox>
        <TextBox Name="tbxToevoegen" Margin="10"/>
        <Button Name="btnAdd" Content="Toevoegen" Margin="10" Click="btnAdd_Click"/>
        <ListBox x:Name="lbxLichtkrant" Margin="10">
            <CheckBox Name="cbx1" Content="Datum + tijd" HorizontalAlignment="Center" IsChecked="True"></CheckBox>
            <CheckBox Name="cbx2" Content="STUW voetbaltornooi" HorizontalAlignment="Center" IsChecked="True"></CheckBox>
        </ListBox>
        <Button Name="btnUpdate" Content="Update lichtkrant" Margin="10" Click="btnUpdate_Click"></Button>
    </StackPanel>
</Window>
